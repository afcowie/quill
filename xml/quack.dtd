<!ELEMENT chapter (title?,(heading | text | code | quote)*,(endnote*),(reference)*)>
<!ATTLIST chapter schema CDATA #REQUIRED>
<!ATTLIST chapter xmlns CDATA #REQUIRED>

<!-- block level  -->

<!ELEMENT title (paragraph)>

<!ELEMENT heading (paragraph)>

<!ELEMENT text (paragraph)+>

<!ELEMENT code (preformat)+>

<!ELEMENT quote (paragraph)+>

<!ELEMENT endnote (paragraph)+>
<!ATTLIST endnote name CDATA #REQUIRED>

<!ELEMENT reference (paragraph)+>
<!ATTLIST reference name CDATA #REQUIRED>


<!-- text containers -->

<!ELEMENT paragraph (#PCDATA | italics | bold | application | type | function | literal | filename | command | note)*>

<!ELEMENT preformat (#PCDATA | bold | note)*>
<!ATTLIST preformat xml:space CDATA #REQUIRED>

<!-- inline spans -->

<!ELEMENT italics (#PCDATA)>

<!ELEMENT bold (#PCDATA)>

<!ELEMENT application (#PCDATA)>

<!ELEMENT type (#PCDATA)>

<!ELEMENT function (#PCDATA)>

<!ELEMENT literal (#PCDATA)>

<!ELEMENT filename (#PCDATA)>

<!ELEMENT command (#PCDATA)>

<!ELEMENT note EMPTY>
<!ATTLIST note ref CDATA #REQUIRED>

